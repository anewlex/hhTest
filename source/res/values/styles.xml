<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="caption_text">
        <item name="android:textColor">#000</item>
    </style>
    <style name="title_text">
        <item name="android:textColor">#bde65b</item>
    </style>
    <style name="text_text">
        <item name="android:textColor">#777777</item>
    </style>
    <style name="link_text">
        <item name="android:textColor">#62ac15</item>
    </style>
    <style name="button">
        <item name="android:paddingLeft">@dimen/text</item>
    	<item name="android:paddingRight">@dimen/text</item>
    	<item name="android:textSize">@dimen/text</item>
    	<item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/button</item>
    </style>

</resources>